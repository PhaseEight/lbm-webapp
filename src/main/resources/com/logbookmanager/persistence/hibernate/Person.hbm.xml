<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<!-- 
		Auto-generated mapping file from
		the hibernate.org cfg2hbm engine
	-->
	<class name="com.logbookmanager.domain.model.person.Person" table="person">

        <id
            name="id"
            column="id"
            type="java.lang.Long"
            unsaved-value="null"
        >
            <generator class="increment">
            </generator>
        </id>

		<version name="version" column="version" type="java.lang.Long"/>

        <property name="active" type="java.lang.Boolean" update="true">
            <column name="ACTIVE" not-null="true" unique="false" default="true"/>
        </property>

        <property name="lastUpdateTimeStamp" type="java.sql.Timestamp">
            <column name="LAST_UPDATE_DATE" length="10" not-null="true" unique="false" default="CURRENT_TIMESTAMP"/>
        </property>

		<list name="personQualifications" lazy="false">
			<key>
				<column name="PERSON_ID" not-null="true" />
			</key>
			<index><column name="ID"/></index>
			<one-to-many class="com.logbookmanager.domain.model.person.PersonQualification" />
		</list>
		
		<list name="personLogbooks" inverse="true" batch-size="0" outer-join="true" lazy="true" cascade="all-delete-orphan">
			<key>
				<column name="PERSON_ID" not-null="true" unique="true" />
			</key>
			<index><column name="ID"/></index>
			<one-to-many class="com.logbookmanager.domain.model.person.PersonLogbook" />
		</list>

		<many-to-one name="secUser" class="com.logbookmanager.domain.model.security.User" lazy="false" foreign-key="FK_SEC_USER_ID" column="SEC_USER_ID" unique="true" not-null="false"/>
		
		<component name="personalDetails" class="com.logbookmanager.domain.support.PersonalDetails">

			<component name="address" class="com.logbookmanager.domain.model.support.Address">
				<property name="nameOrNumber" type="java.lang.String" update="true" insert="true" column="name_or_number"
					length="150" not-null="false" />

				<property name="street" type="java.lang.String" update="true" insert="true" column="street" length="150"
					not-null="false" />

				<property name="city" type="java.lang.String" update="true" insert="true" column="city" length="150" not-null="false" />

				<property name="province" type="java.lang.String" update="true" insert="true" column="province" length="150"
					not-null="false" />

				<many-to-one name="country" class="com.logbookmanager.domain.model.Country" cascade="none" column="country_id" not-null="false" insert="false" update="false"
				    ></many-to-one>

				<property name="postCode" type="java.lang.String" update="true" insert="true" column="postal_code" length="15"
					not-null="false" />
			</component>

		</component>

	</class>
</hibernate-mapping>