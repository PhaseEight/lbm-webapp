<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.logbookmanager.domain.model.logbook.EntryAttribute"
		table="entry_attribute">
		<id name="id" column="id" type="java.lang.Long" unsaved-value="null">
			<generator class="increment">
			</generator>
		</id>

		<version name="version" column="version" type="java.lang.Long" />

		<property name="active" type="java.lang.Boolean" update="true">
			<column name="ACTIVE" not-null="true" unique="false" default="true" />
		</property>

		<property name="lastUpdateTimeStamp" type="java.sql.Timestamp">
			<column name="LAST_UPDATE_DATE" length="10" not-null="true"
				unique="false" default="CURRENT_TIMESTAMP" />
		</property>

		<many-to-one name="detailAttribute"
			class="com.logbookmanager.domain.model.logbook.DetailAttribute">
			<column name="DETAIL_ATTRIBUTE_ID" not-null="true" />
		</many-to-one>
		<many-to-one name="logbookUserLogbookEntry"
			class="com.logbookmanager.domain.model.logbook.LogbookUserLogbookEntry">
			<column name="LOGBOOKUSER_LOGBOOK_ENTRY_ID" not-null="true" />
		</many-to-one>
		<property name="displayValue" type="string">
			<column name="DISPLAY_VALUE" />
		</property>
		<property name="sortValue" type="double">
			<column name="SORT_VALUE" precision="22" scale="0" />
		</property>

	</class>
</hibernate-mapping>
